

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - WebApplicationDataBase</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Веб-приложение для работы с базой данных Access</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            </div>
        </div>
    </nav>
</header>
<div class="container-fluid">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<body>
    <!-- Modal -->
        <div class="modal fade" id="modalAddClient" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="ModalLabel">Форма добавления нового клиента</h5>
              </div>
                <div class="modal-body">
                    <form asp-action="Index" asp-controller="Home">
                        <div class="row mb-3">
                            <label for="inputSurname" class="col-sm-2 col-form-label">Фамилия</label>
                            <div class="col-sm-10">
                                <input name="FirstName" type="text" class="form-control" id="inputSurname" required placeholder="Обязательное поле для заполнения!"/>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputFirstName" class="col-sm-2 col-form-label">Имя</label>
                            <div class="col-sm-10">
                                <input name="Surname" type="text" class="form-control" id="inputFirstName" required placeholder="Обязательное поле для заполнения!"/>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputLastName" class="col-sm-2 col-form-label">Отчество</label>
                            <div class="col-sm-10">
                                <input name="LastName" type="text" class="form-control" id="inputLastName"/>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputPhone" class="col-sm-2 col-form-label">Номер телефона</label>
                            <div class="col-sm-10">
                                <input name="Phone" type="text" class="form-control" id="inputPhone" required placeholder="Обязательное поле для заполнения!">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputAddress" class="col-sm-2 col-form-label">Адрес местожительства</label>
                            <div class="col-sm-10">
                                <input name="Address" type="text" class="form-control" id="inputAddress" required placeholder="Обязательное поле для заполнения!">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputNumberPassport" class="col-sm-2 col-form-label">Номер паспорта</label>
                            <div class="col-sm-10">
                                <input name="NumberPassport" type="text" class="form-control" id="inputNumberPassport" required placeholder="Обязательное поле для заполнения!">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputSeriesPassport" class="col-sm-2 col-form-label">Серия паспорта</label>
                            <div class="col-sm-10">
                                <input name="SeriesPassport" type="text" class="form-control" id="inputSeriesPassport" required placeholder="Обязательное поле для заполнения!">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputAddressPassport" class="col-sm-2 col-form-label">Адрес регистрации</label>
                            <div class="col-sm-10">
                                <input name="AddressPassport" type="text" class="form-control" id="inputAddressPassport" required placeholder="Обязательное поле для заполнения!">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputINN" class="col-sm-2 col-form-label">ИНН</label>
                            <div class="col-sm-10">
                                <input name="Inn" type="text" class="form-control" id="inputINN">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputBankBook" class="col-sm-2 col-form-label">Лицевой счет</label>
                            <div class="col-sm-10">
                                <input name="BankBook" type="text" class="form-control" id="inputBankBook" required placeholder="Обязательное поле для заполнения!">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                            <button type="submit" class="btn btn-primary" name="Operations" value="add">Дообавить</button>
                        </div>
                    </form>
                </div>
            </div>
          </div>
        </div>
</body>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - WebApplicationDataBase - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>